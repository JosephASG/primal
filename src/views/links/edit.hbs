
<div class="container-profile">
    <div class="contenido">
            <div class="contenido-caja">
                <form action="/comments/edit/{{link.id}}" method="POST" >
                        <div class="form-group">
                            <input type="text" value="{{link.tittle}}" class="form-control" name="tittle" id="" placeholder="De" autofocus>
                        </div>
                        <div class="form-group">
                            <input type="text" value="{{link.url}}" name="url" class="form-control" id="" placeholder="Asunto">
                        </div>
                        <div class="form-group">
                            <textarea name="description" id="" cols="0" rows="2" class="form-control" placeholder="Comentario">{{link.description}}</textarea>
                        </div>
                        <div class="form-group">
                            <button class="btn btn-success btn-block">
                                Save
                            </button>
                        </div>
                    </form>
            </div>
        </div>
</div>